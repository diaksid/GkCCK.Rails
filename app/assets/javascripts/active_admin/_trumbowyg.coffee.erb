#= require redactor
#= require_self


$ ->
  $('[data-redactor]').each ->
    options =
      svgPath: '<%= asset_path('trumbowyg/dist/ui/icons.svg') %>'
      lang: 'ru'
      btns: [
        ['viewHTML']
        ['undo', 'redo']
        ['formatting']
        ['strong', 'b', 'em', 'del']
        ['superscript', 'subscript']
        ['justifyLeft', 'justifyCenter', 'justifyRight', 'justifyFull']
        ['unorderedList', 'orderedList']
        ['removeformat']
        ['fullscreen']
      ]
      autogrow: true
      semantic: false
      resetCss: true
    el = $ @
    options = $.extend {}, options, el.data 'redactor'
    el.trumbowyg options
