ruby:
  breakpoint ||= 'lg'
  col ||= 6
  links ||= true
  header ||= false
  path = image_path figure
  attrs = {banner: {class: "col-#{breakpoint}-#{col}",
                    data: {}},
           frame: {width: local_assigns[:width] || 800,
                   height: local_assigns[:height] || 600,
                   data: {lazy: path}}}
  if local_assigns[:lightbox] || local_assigns[:lightbox_href]
    attrs[:banner][:data] = {lightbox: local_assigns[:lightbox] || true,
                             lightbox_href: local_assigns[:lightbox_href] ? image_path(lightbox_href) : path}
  end
  if local_assigns[:align]
    attrs[:frame][:class] = "h-bg--cover-#{align}"
  end


figure.banner *attrs[:banner]
  canvas.banner__frame.h-bg--cover *attrs[:frame]

  link%image href=path
  - if attrs[:banner][:data] && attrs[:banner][:data][:lightbox_href] != path
      link%image href=attrs[:banner][:data][:lightbox_href]

  - if header
    header.banner__header
      h3%name.banner__name == header
